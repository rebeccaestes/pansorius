<div class="profile left-col">

	<% if @profile.image_url %>
		<%= image_tag @profile.image_url, class: 'user-img' %>
	<% else %>
		<img src="http://www.placecage.com/c/200/300" class="user-img">
	<% end %>

	<% if @profile.user != current_user %>
		<%= link_to 'Request Email', new_profile_email_path(@profile), class: 'connect-link' %>
	<% end %>

	<div class='values'>
		<h2>Values</h2>
		<% if @profile.user == current_user %>
			<%= link_to profile_valuetaggings_path(@profile) do %>
				<i class="fa fa-pencil-square-o"></i>
			<% end %>
		<% end %>

		<% @user_vals.each do |vals| %>
			<div class='value-item'><p><%= vals.value %></p></div>
		<% end %>
	</div>

	<div class="skills">
		<h2>Skills</h2>
		<% if @profile.user == current_user %>
			<%= link_to profile_skilltaggings_path(@profile) do %>
				<i class="fa fa-pencil-square-o"></i>
			<% end %>
		<% end %>
		<% @user_skills.each do |skill| %>
			<div class='skill-item'><p><%= skill.skill %></p></div>
		<% end %>
	</div>

	<div class='social'>
		<a href="<%= @profile.facebook %>">
			<i class="fa fa-facebook-square fa-2x"></i>
		</a>
		<a href='<%= @profile.twitter %>'>
   		<i class="fa fa-twitter-square fa-2x"></i>
		</a>
		<a href='<%= @profile.instagram %>'>
   		<i class="fa fa-instagram fa-2x"></i>
		</a>
  </div>
</div>


<div class="profile right-col">

		<div><h4 class="meet">Meet <%= @profile.name %> </h4></div>
		<span class="role-loc">a <%= @profile.role.upcase%> in <%= @profile.location %></span>
		<% if @user == @profile.user %>
			<%= link_to edit_profile_path(@profile) do %>
  			<i class="fa fa-pencil-square-o"></i>
			<% end %>
		<% end %>
		<p>"<%= @profile.quote %>"</p>

<div class="experience">
	<h2>EXPERIENCE</h2>

	<% if @user == @profile.user %>
		<%= link_to new_profile_experience_path(@profile) do %>
			<i class="fa fa-plus-square-o"></i>
		<% end %>
	<% end %>
		<div>
		<% @experiences.each do |experience| %>
			<h4><%= experience.role %></h4>
		<% if current_user == @profile.user %>
			<div class="edit-exp">
				<%= link_to edit_profile_experience_path(@profile, experience) do %>
					<i class="fa fa-pencil-square-o"></i>
				<% end %>
			</div>
		<% end %>
			<div class="exp-info">
				<div><%= experience.company %></div>
				<div><%= experience.start_date %> - <%= experience.end_date %> </div>
				<p><%= experience.description %></p>
			</div>
			<% end %>
		</div>
	</div>

	<% if @profile.role == "mentor" %>
		<div class="insights">
			<h2>INSIGHTS</h2>

			<% if current_user == @profile.user %>
				<%= link_to edit_profile_path(@profile) do %>
					<i class="fa fa-pencil-square-o"></i>
				<% end %>
			<% end %>

			<p>"<%= @profile.insights %>"</p>
		</div>
	<% end %>
</div>

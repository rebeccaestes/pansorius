<div class="profile">
	<div class="row">
		<div class="col s4">
			<img src="http://www.placecage.com/c/200/300">
		</div>

		<div class='values'>
			<h2>Values</h2>
			<%= link_to 'New Value', new_profile_value_path(@profile) %>
			<% @values.each do |value| %>
				<p><%= value %></p>
				<% end %>
			</div>
		<div class="col s8">
			<div class="role">
				<h2><%= @profile.role.upcase %></h2>
				<% if current_user == @profile.user %>
					<%= link_to icon('pencil-square-o', class: 'icon'), edit_profile_path(@profile) %>
				<% end %>
				<blockquote>"<%= @profile.quote %>"</blockquote>
			</div>
			<div class="experience">
				<h2>Experience</h2>
				<% if current_user == @profile.user %>
					<%= link_to icon('pencil-square-o', class: 'icon'), edit_profile_path(@profile) %>
				<% end %>
				<% @experiences.each do |experience| %>
					<h3><%= experience.role %></h3>
					<h4><%= experience.company %></h4>
					<span> <%= experience.start_date %> </span>
					<span> -  <%= experience.end_date %> </span>
					<p><%= experience.description %></p>
				<% end %>
			</div>
		</div>
	</div>


	<% if @profile.role == "mentor" %>
		<div class="insights">
			<h2>INSIGHTS</h2>
			<% if current_user == @profile.user %>
				<%= link_to icon('pencil-square-o', class: 'icon'), edit_profile_path(@profile) %>
			<% end %>
			<blockquote>"<%= @profile.insights %>"</blockquote>
		</div>
	<% end %>
</div>

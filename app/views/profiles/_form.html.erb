  <p class="field">
    <%= f.label :role, class: 'label' %><br>
    <%= f.select(:role, [['Mentor', 'mentor'], ['Protege', 'protege']], {:prompt => 'Select Your Desired Role',:include_blank => false}, data: { behavior: "select-role" }) %>
  </p>

  <p class="field">
    <%= f.label :quote, class: 'label'  %><br>
    <%= f.text_area :quote, class: 'input essay'  %>
  </p>

  <p class="field">
    <%= f.label :insights, class: 'label'  %><br>
    <%= f.text_area :insights, class: 'input essay'  %>
  </p>

  <p class="field">
    <%= f.label :image_url, class: 'label'  %><br>
    <%= f.text_field :image_url, class: 'input'  %>
  </p>

    <p class="field">
      <%= f.label :twitter, class: 'label' %><br>
      <%= f.text_field :twitter, class: 'input'  %>
    </p>

    <p class="field">
      <%= f.label :linkedin, class: 'label' %><br>
